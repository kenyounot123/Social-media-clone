<div class="min-vh-100 d-flex flex-column justify-content-center align-items-center">
  <div class="d-flex flex-row gap-5">
    <div class="text-center d-grid">
      <div class="col">
        <%= image_tag "3665980.png", width: 200 %>
      </div>
      
      <div class="d-flex justify-content-center col">
        <h1 class="stellar-title">Stellar</h1>
      </div>
      <h3>A social media experience built with Ruby on Rails</h3>
    </div>
    

    <div class="border border-black border-2 rounded p-3">
      <%= turbo_frame_tag 'login_form' do %>
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, 
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "form-label" %><br />
            <%= f.password_field :password, 
                                  autocomplete: "current-password",
                                  class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class:"btn btn-primary", data: { turbo_frame: '_top' } %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>

</div>
