<%= turbo_frame_tag post do %>
  <div class="text-center container post-container">
    <%= post.user.name %> posted 
    <span class="post-title-container"><%= post.title %></span>
    <div class="post-body-container">
      <%= post.body %>
    </div>
    <div class="post-actions">
      <% unless current_page?(post_path(post)) %>
        <%= link_to "View Post",
                    post_path(post),
                    data: { turbo_frame: "_top" } %>
      <% end %>
      <% if current_user == post.user %>
        <%= button_to "Delete",
                      post_path(post),
                      method: :delete %>
      <% end %>
    </div>
  </div> 
<% end %>
