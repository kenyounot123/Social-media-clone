<div class='mt-3 container-lg'>
  <%= form_with model: post,
                data: { 
                  controller: "reset-form",
                  action: 'turbo:submit-end->reset-form#reset' } do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="border-2 border-black w-50 card p-3 mx-auto">
      <div class='mt-3'>
        <%= form.label :title, 'Post Title' %>
        <%= form.text_field :title, 
                            placeholder: 'What is this post about ?',
                            class:"form-control"%>
      </div>

      <div>
        <%= form.label :body %>
        <%= form.text_area :body, 
                            placeholder: 'My amazing post',
                            class:"form-control"%>
      </div>
      <div class="d-flex justify-content-end">
        <svg width="30px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>image</title><path d="M8.5,13.5L11,16.5L14.5,12L19,18H5M21,19V5C21,3.89 20.1,3 19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19Z" /></svg>
      </div>
      <div class="d-flex gap-2">
        <%= form.submit class: "btn btn-sm btn-primary w-50" %>
        <%= link_to "Cancel", dashboard_path, class: "btn btn-sm btn-secondary w-50" %>
      </div>
    </div>
  <% end %>
</div>
