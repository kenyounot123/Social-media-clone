<%= turbo_frame_tag Post.new %><br>

<%= turbo_frame_tag "posts" do %>
  <% @posts.each do |post| %>
    <%= render post, path: post_path(post) %>

    <%= turbo_frame_tag "comments_for_#{post.id}" do %>
      <% post.comments.each do |comment| %>
          <%= render comment %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
